<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->"
        <!--<item name="android:windowBackground">@drawable/app_background</item>-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Tells whether or not app shows title -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@color/primary</item>
        <item name="android:windowTitleBackgroundStyle">@color/primaryDark</item>
        <!-- Tells whether or not app has actionBar -->
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionBarOverlay">true</item>


        <!-- Custom Styles -->
        <item name="actionBarStyle">@style/MyActionbarStyle</item>
        <item name="actionMenuTextColor">@color/actionMenuText</item>
        <item name="android:actionMenuTextColor">@color/actionMenuText</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
        <item name="android:progressBarStyle">@style/MyProgressBarStyle</item>
        <!-- Defines a new Drop Down ListView Style -->
        <!--<item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>-->
    </style>

    <!-- Action Bar Style -->
    <style
        name="MyActionbarStyle"
        parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/MyActionBarTitleStyle</item>
        <item name="background">@color/actionBarBackground</item>
        <!-- Support Libraries Compatible -->
        <item name="@android:titleTextStyle">@style/MyActionBarTitleStyle</item>
        <item name="@android:background">@color/actionBarBackground</item>
    </style>

    <!-- Action Bar Title Style -->
    <style
        name="MyActionBarTitleStyle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="@android:textColor">@color/actionBarTitle</item>
    </style>

    <!-- Drawer Arrow Style -->
    <style
        name="MyDrawerArrowStyle"
        parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawerToggle</item>
    </style>

    <!-- Progress Bar Style -->
    <style
        name="MyProgressBarStyle"
        parent="Widget.AppCompat.ProgressBar">
        <item name="background">@color/Murky_Gray</item>
        <item name="android:background">@color/Murky_Gray</item>
        <item name="android:textColor">@color/TextBoxWhite</item>
    </style>
</resources>
