<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<item>
		<shape
	    	android:shape="rectangle" >
	    	<gradient 
            	android:startColor="@color/TextBoxWhite"
            	android:endColor="@color/TextBoxWhite"
            	android:centerColor="@color/Light_Slate_Gray"
            	android:angle="180"/>
	    	<corners
	        	android:radius="1dp"
	        	android:bottomLeftRadius="5dp"
	        	android:bottomRightRadius="5dp"
	        	android:topLeftRadius="0.1dp"
	        	android:topRightRadius="0.1dp" >
	    	</corners>
			<padding
				android:top="1dp"
				android:bottom="2dp"
				android:right="2dp" />
		</shape>
	</item>
	<item>
		<shape
	    	android:shape="rectangle" >
	    	<gradient 
            	android:startColor="@color/White"
            	android:endColor="@color/TextBoxWhite"
            	android:angle="0"/>
	    	<corners
	        	android:radius="1dp"
	        	android:bottomLeftRadius="5dp"
	        	android:bottomRightRadius="5dp"
	        	android:topLeftRadius="0.1dp"
	        	android:topRightRadius="0.1dp" >
	    	</corners>
			<padding
				android:left="2dp"/>
		</shape>
	</item>
	<item>
		<shape
	    	android:shape="rectangle" >
	
	    	<solid
	        	android:color="@color/TextBoxWhite" >
	    	</solid>
	    	<corners
	        	android:radius="1dp"
	        	android:bottomLeftRadius="5dp"
	        	android:bottomRightRadius="5dp"
	        	android:topLeftRadius="0.1dp"
	        	android:topRightRadius="0.1dp" >
	    	</corners>
		</shape>
	</item>
</layer-list>