<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context="com.nined.player.MainActivity">
	<!--  The main drawerLayout view -->

	<FrameLayout
	    android:id="@+id/main_content_frame"
		android:layout_weight="1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">

		<android.support.v4.view.ViewPager
	        android:id="@+id/main_view_pager"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>

	</FrameLayout>

	<ExpandableListView android:id="@+id/main_nav_drawer"
	    android:layout_gravity="start"
	    android:choiceMode="singleChoice"
		android:layout_width="@dimen/drawer_width"
		android:layout_height="match_parent"
		android:groupIndicator="@drawable/arrow_indicator"
	    android:background="@color/drawerBackground" />
	
	<ExpandableListView android:id="@+id/second_drawer"
	    android:layout_gravity="end"
	    android:choiceMode="singleChoice"
		android:layout_width="@dimen/drawer_width"
		android:layout_height="match_parent"
		android:groupIndicator="@drawable/arrow_indicator"
	    android:background="@color/drawerBackground" />
</android.support.v4.widget.DrawerLayout>